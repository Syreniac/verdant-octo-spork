
CFLAGS = -pedantic -Wall -Wextra -Wno-unused-variable -Wno-unused-parameter
LFLAGS = -I/opt/SDL/2.0.3/include/SDL2 -L/opt/SDL/2.0.3/lib -Wl,-rpath,/opt/SDL/2.0.3/lib -lSDL2 -lm
# List all the files here
OBJS = main.o init.o game.o world_generation.o game_objects.o AI.o UI.o
PROG = bin_lab/Prototype
CXX = gcc

# top-level rule to create the program.
all: $(PROG)

# compiling other source files.
%.o: src/%.c src/%.h src/generic.h
	$(CXX) $(CFLAGS) $(LFLAGS) -c -s $<

# linking the program.
$(PROG): $(OBJS)
	$(CXX) $(OBJS) -o $(PROG) $(LFLAGS)

# cleaning everything that can be automatically recreated with "make".
clean:
	rm $(PROG) *.o
