
CFLAGS = -pedantic -Wall -Wextra -Wno-unused-variable -Wno-unused-parameter -Wswitch -std=c99
LFLAGS = -I/opt/SDL/2.0.3/include -L/opt/SDL/2.0.3/lib -Wl,-rpath,/opt/SDL/2.0.3/lib -lSDL2 -lm
# List all the files here
OBJS = modularUI.o
PROG = modularUI_bin
CXX = gcc

# top-level rule to create the program.
all: $(PROG)

# compiling other source files.
%.o: %.c %.h
	$(CXX) $(CFLAGS) $(LFLAGS) -c -s $<

# linking the program.
$(PROG): $(OBJS)
	$(CXX) $(OBJS) -o $(PROG) $(LFLAGS)

# cleaning everything that can be automatically recreated with "make".
clean:
	rm $(PROG) *.o
